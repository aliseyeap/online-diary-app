@model OnlineDiary.Models.MyDiary

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">⚠️ Are you sure you want to delete this?</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry)
        </dd>
    </dl>
</div>

<!-- Buttons aligned to the left side -->
<div class="d-flex justify-content-start mt-3">
    <form asp-action="Delete" class="me-2">
        <input type="hidden" asp-for="MyDiaryId" />
        <button type="submit" class="btn btn-warning custom-btn">
            Confirm Delete 🗑️
        </button>
    </form>
    <a asp-action="Index" class="btn btn-danger custom-btn">
        Cancel ❌
    </a>
</div>

<style>
    .custom-btn {
        transition: all 0.3s ease;
        color: #fff;
        font-weight: 500;
    }

    .btn-warning {
        background-color: #8B4513;
        border-color: #8B4513;
    }

    .btn-danger {
        background-color: lightsalmon; 
        border-color: lightsalmon;
    }

    .custom-btn:hover {
        background-color: #fff !important;
        color: #000 !important; 
        border-color: #ddd; 
    }
</style>
