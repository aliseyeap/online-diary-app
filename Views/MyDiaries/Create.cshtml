@model OnlineDiary.Models.MyDiary

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Diary 📌</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <p></p>
            <div class="col-md-2">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="Entry" class="control-label"></label>
                <textarea asp-for="Entry" class="form-control fixed-height"></textarea>
                <span asp-validation-for="Entry" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group d-flex">
                <button type="submit" class="btn btn-success me-2 custom-btn">
                    Add ✚
                </button>
                <a asp-action="Index" class="btn btn-danger custom-btn">
                    Cancel ❌
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .custom-btn {
        transition: all 0.3s ease;
        color: #fff;
        font-weight: 500;
    }

    .btn-success {
        background-color: navy; 
        border-color: navy;
    }

    .btn-danger {
        background-color: lightsalmon; 
        border-color: lightsalmon;
    }

    .custom-btn:hover {
        background-color: #fff !important;
        color: #000 !important; 
        border-color: #ddd; 
    }

    .fixed-height {
        height: 200px;
        resize: vertical;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
